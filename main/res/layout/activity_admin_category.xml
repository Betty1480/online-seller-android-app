<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="27dp"
        />
    <LinearLayout
        android:gravity="center"
        android:layout_below="@id/slogan_category"
        android:layout_marginTop="45dp"
        android:orientation="horizontal"
        android:id="@+id/linearlayout_1_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_tshirt"
            android:src="@drawable/tshirts"
            android:layout_width="wrap_content"
            android:layout_height="80dp" />
        <ImageView
            android:id="@+id/iv_sports_shirt"
            android:src="@drawable/sports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_female-dress"
            android:src="@drawable/female_dresses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_sweathers"
            android:src="@drawable/sweather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_below="@id/linearlayout_1_category"
        android:layout_marginTop="45dp"
        android:orientation="horizontal"
        android:id="@+id/linearlayout_2_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_glasses"
            android:src="@drawable/glasses"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/iv_purses"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/purses_bags" />
        <ImageView
            android:id="@+id/iv_shoes"
            android:src="@drawable/shoess"
            android:layout_width="80dp"
            android:layout_height="70dp" />
        <ImageView
            android:id="@+id/iv_hats_caps"
            android:src="@drawable/hats"
            android:layout_width="90dp"
            android:layout_height="80dp" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_below="@id/linearlayout_2_category"
        android:layout_marginTop="45dp"
        android:orientation="horizontal"
        android:id="@+id/linearlayout_3_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_headphones"
            android:src="@drawable/headphoness"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/iv_laptops"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/laptops" />
        <ImageView
            android:id="@+id/iv_watches"
            android:src="@drawable/watches"
            android:layout_width="80dp"
            android:layout_height="70dp" />
        <ImageView
            android:id="@+id/iv_mobile_phones"
            android:src="@drawable/mobiles"
            android:layout_width="90dp"
            android:layout_height="80dp" />
    </LinearLayout>

</RelativeLayout>