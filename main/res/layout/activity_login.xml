<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".LoginActivity">

    <ImageView
        android:src="@drawable/applogo"
        android:scaleType="centerInside"
        android:id="@+id/iv_imag_login"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:layout_height="100dp" />
    <EditText
        android:layout_below="@id/iv_imag_login"
        android:id="@+id/et_phone_number"
        android:background="@drawable/index_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_marginLeft="15dp"
        android:textSize="17sp"
        android:layout_marginRight="15dp"
        android:hint="Phone Number"
        android:inputType="number"/>

    <EditText
        android:layout_below="@id/et_phone_number"
        android:id="@+id/et_password"
        android:background="@drawable/index_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_marginLeft="15dp"
        android:textSize="17sp"
        android:layout_marginRight="15dp"
        android:hint="Password"
        android:inputType="textPassword"/>
    <LinearLayout
        android:id="@+id/linear_layout_1"
        android:orientation="horizontal"
        android:layout_below="@id/et_password"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:buttonTint="@color/colorPrimaryDark"
            android:text="remember me"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"
            android:id="@+id/cb_rem_me"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_forget_password"
            android:text="Forgot Password ?"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:textSize="17sp"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_login_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/linear_layout_1"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="17dp"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Login"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/tv_Admin"
        android:text="I am Admin ?"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:layout_below="@id/btn_login_customer"
        android:layout_marginLeft="16dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_Not_Admin"
        android:text="Not Admin ?"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:layout_below="@id/btn_login_customer"
        android:layout_marginLeft="16dp"
        android:visibility="invisible"
        android:layout_height="wrap_content" />


</RelativeLayout>